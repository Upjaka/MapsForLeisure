<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.MainActivity">

    <FrameLayout
        android:id="@+id/loadingScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/forest_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="100dp"
            android:text="@string/LoadingScreenText"
            android:textSize="32sp"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/startScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/forest_background"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:rotation="-20"
            android:text="@string/mushroomHuntingText"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:rotation="-20"
            android:text="@string/anglerText"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/registrationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="130dp"
            android:layout_marginRight="60dp"
            android:backgroundTint="#FFE082"
            android:onClick="onStartScreenRegistrationButtonClick"
            android:padding="15dp"
            android:text="@string/registrationButtonText"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="24sp"
            app:cornerRadius="20dp"
            app:strokeColor="#FF6F00"
            app:strokeWidth="5dp" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="60dp"
            android:backgroundTint="#FFE082"
            android:onClick="onStartScreenLoginButtonClick"
            android:padding="15dp"
            android:text="@string/loginButtonText"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="24sp"
            app:cornerRadius="20dp"
            app:strokeColor="#FF6F00"
            app:strokeWidth="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/createAccountLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33691E"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/bg_green"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="10dp"
                android:text="@string/createAccountText"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputNewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_green2"
                android:gravity="center_vertical"
                android:inputType="text"
                android:hint="@string/inputNewNameText"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/inputNewEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_green2"
                android:gravity="center_vertical"
                android:hint="@string/inputNewEmail"
                android:inputType="textEmailAddress"
                android:padding="10dp" />

            <EditText
                android:id="@+id/inputNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_green2"
                android:gravity="center_vertical"
                android:hint="@string/inputNewPassword"
                android:inputType="textPassword"
                android:padding="10dp" />

            <Button
                android:id="@+id/createAccountButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="#FFE082"
                android:padding="15dp"
                android:text="@string/createAccountButtonText"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp"
                app:cornerRadius="20dp"
                app:strokeColor="#FF6F00"
                app:strokeWidth="5dp"
                android:onClick="onCreateAccountLayoutCreateAccountButtonClick"/>

            <Button
                android:id="@+id/haveAccountButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="10dp"
                android:backgroundTint="#00FFFFFF"
                android:text="@string/haveAccountText"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp"
                android:onClick="onCreateAccountLayoutHaveAccountButtonClick"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/authorizationLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33691E"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="60dp"
            android:orientation="vertical"
            android:background="@drawable/bg_green">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="10dp"
                android:text="@string/authorizationText"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_green2"
                android:gravity="center_vertical"
                android:hint="@string/inputEmailAddressText"
                android:inputType="textEmailAddress"
                android:padding="10dp" />

            <EditText
                android:id="@+id/inputPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_green2"
                android:gravity="center_vertical"
                android:hint="@string/inputPasswordText"
                android:inputType="textPassword"
                android:padding="10dp" />

            <CheckBox
                android:id="@+id/rememberCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/rememberCheckBoxText"/>

            <Button
                android:id="@+id/authorizationButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="#FFE082"
                android:padding="15dp"
                android:text="@string/authorizationButtonText"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp"
                app:cornerRadius="20dp"
                app:strokeColor="#FF6F00"
                app:strokeWidth="5dp"
                android:onClick="onAuthorizationLayoutAuthorizationButtonClick"/>

            <Button
                android:id="@+id/forgotPasswordButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="10dp"
                android:backgroundTint="#00FFFFFF"
                android:text="@string/forgotPasswordButtonText"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="12sp"
                android:onClick="onAuthorizationLayoutForgotPasswordButtonClick"/>

            <Button
                android:id="@+id/createNewAccountButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:backgroundTint="#00FFFFFF"
                android:text="@string/createNewAccountButtonText"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="12sp"
                android:onClick="onAuthorizationLayoutCreateNewAccountButtonClick"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/newPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33691E"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="60dp"
            android:orientation="vertical"
            android:background="@drawable/bg_green">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="10dp"
                android:text="@string/passwordRecoveryText"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/newPasswordText"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="50dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/bg_green2"
                android:gravity="center_vertical"
                android:hint="@string/inputEmailAddressText"
                android:inputType="textEmailAddress"
                android:padding="10dp" />

            <Button
                android:id="@+id/getNewPasswoButton"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="80dp"
                android:backgroundTint="#FFE082"
                android:padding="15dp"
                android:text="@string/getNewPasswordButtonText"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp"
                app:cornerRadius="20dp"
                app:strokeColor="#FF6F00"
                app:strokeWidth="5dp"
                android:onClick="onNewPasswordLayoutGetNewPasswordButtonClick"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/markerInfoPanel"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:background="#DCEDC8"
        android:orientation="vertical"
        android:translationX="65dp"
        android:translationY="90dp"
        android:translationZ="2dp"
        android:visibility="invisible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/markerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxEms="12"
                android:text="@string/MarkerInfoMarkerNameText" />

            <ImageView
                android:id="@+id/closeMarkerInfoButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:onClick="onMarkerInfoCloseButtonClick"
                android:src="@drawable/close" />
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#F1F8E9">

            <TextView
                android:id="@+id/markerDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:minHeight="48dp" />
        </ScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buttonEdit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|left"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="25dp"
                android:onClick="onMarkerInfoChangeButtonClick"
                android:src="@drawable/edit" />

            <ImageView
                android:id="@+id/buttonOpenListMarkers"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="25dp"
                android:onClick="onMarkerInfoOpenListButtonClick"
                android:src="@drawable/list_markers" />

            <ImageView
                android:id="@+id/buttonDeleteMarker"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="25dp"
                android:onClick="onMarkerInfoDeleteButtonClick"
                android:src="@drawable/garbage" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/listLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF8E1"
        android:padding="16dp"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFE082"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/listText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="30dp"
                android:text="@string/topPanelListMarkersText"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/listCloseButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginStart="100dp"
                android:alpha="0.7"
                android:onClick="onMarkerListCloseButtonClick"
                android:src="@drawable/close" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/confirmationLayout"
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="#9CCC65"
            android:translationZ="3dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/confirmationText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/confirmationText"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#FFD54F"
                android:text="@string/cancelButtonText"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:strokeColor="#FF6F00"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/confirmButton"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#FFD54F"
                android:text="@string/confirmButtonText"
                android:textAllCaps="false"
                android:textSize="11sp"
                app:strokeColor="#FF6F00"
                app:strokeWidth="3dp" />
        </FrameLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="120dp" />

        <TextView
            android:id="@+id/emptyListText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/notMarkersListMarkersText"
            android:textSize="20sp"
            android:translationZ="2dp"
            android:visibility="invisible" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/MainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:alpha="0.7"
            android:background="#FFFFFF"
            android:onClick="onMenuButtonClick"
            android:src="@drawable/menu"
            android:translationZ="2dp" />

        <Button
            android:id="@+id/trackingButton"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:alpha="0.75"
            android:backgroundTint="#FFFFFF"
            android:onClick="onTrackingButtonClick"
            android:text="Запись трека"
            android:textColor="#000000"
            android:textSize="12sp"
            app:icon="@drawable/tracking"
            app:iconGravity="start"
            app:iconPadding="1dp"
            app:iconSize="40dp"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/routingButton"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:alpha="0.75"
            android:backgroundTint="#FFFFFF"
            android:onClick="onRouteButtonClick"
            android:text="Найти маршрут"
            android:textColor="#000000"
            android:textSize="12sp"
            app:icon="@drawable/routing"
            app:iconGravity="start"
            app:iconPadding="1dp"
            app:iconSize="40dp"
            app:iconTint="#000000" />

        <ImageView
            android:id="@+id/visibilityListButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:alpha="0.8"
            android:background="#FFFFFF"
            android:onClick="onVisibilityListButtonClick"
            android:src="@drawable/display"
            android:translationZ="2dp" />

        <ListView
            android:id="@+id/menu"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:background="#FFF8E1"
            android:translationZ="2dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/myLocationButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|right"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="20dp"
            android:alpha="0.7"
            android:background="@color/white"
            android:onClick="onMapCenterButtonClick"
            android:src="@drawable/my_location"
            android:translationZ="2dp" />

        <ImageView
            android:id="@+id/plusZoomButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:alpha="0.6"
            android:background="@color/white"
            android:onClick="onPlusZoomButtonClick"
            android:src="@drawable/plus"
            android:translationZ="2dp" />

        <ImageView
            android:id="@+id/minusZoomButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:alpha="0.6"
            android:background="@color/white"
            android:onClick="onMinusZoomButtonClick"
            android:src="@drawable/minus"
            android:translationZ="2dp" />

        <ImageView
            android:id="@+id/centerMarker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onCenterMarkerClick"
            android:scaleX="0.07"
            android:scaleY="0.07"
            android:src="@drawable/default_marker"
            android:translationY="-29px"
            android:translationZ="1dp"
            android:visibility="invisible" />

        <com.yandex.mapkit.mapview.MapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/createFormLayout"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_gravity="bottom"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp"
            android:translationZ="3dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/createOrChangeTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/AddNewMarkerTitleText"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/createOrChangeNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MarkerNameLabelText"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/createOrChangeInputName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:hint="@string/EditMarkerNameText"
                android:inputType="text" />

            <TextView
                android:id="@+id/createOrChangeDescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/DescriptionLabelText"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/createOrChangeInputDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/DescriptionButtonText"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/createOrChangeTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MarkerTypeCheckboxText"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/fish_marker" />

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/mushroom_marker" />

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/walk_marker" />

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/default_marker" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/markerType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/fishRadioButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/bg_orange" />

                <RadioButton
                    android:id="@+id/mushroomRadioButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/bg_orange" />

                <RadioButton
                    android:id="@+id/walkRadioButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/bg_orange" />

                <RadioButton
                    android:id="@+id/defaultRadioButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_orange" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/createOrChangeButton"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:backgroundTint="#FFD54F"
                    android:onClick="onCreateFormCreateOrChangeMarkerButtonClick"
                    android:text="@string/SaveButtonText"
                    android:textColor="#000000"
                    app:strokeColor="#FF6F00"
                    app:strokeWidth="3dp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/cancelCreateButton"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:backgroundTint="#FFD54F"
                    android:onClick="onCreateFormCancelButton"
                    android:text="@string/CancelButtonText"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:strokeColor="#FF6F00"
                    app:strokeWidth="3dp" />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/visibilityListLayout"
            android:layout_width="250dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="120dp"
            android:background="#DCEDC8"
            android:translationZ="3dp"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/displayLayoutCloseButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:alpha="1"
                android:onClick="onVisibilityListCloseButtonClick"
                android:src="@drawable/close" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="@string/displayLayoutText"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/fish_marker" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/mushroom_marker" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/walk_marker" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/default_marker" />
            </LinearLayout>

            <RadioButton
                android:id="@+id/fishDisplayRadioButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:checked="true"
                android:onClick="onVisibilityListFishButtonClick" />

            <RadioButton
                android:id="@+id/mushroomDisplayRadioButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:checked="true"
                android:onClick="onVisibilityListMushroomButtonClick" />

            <RadioButton
                android:id="@+id/walkDisplayRadioButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:checked="true"
                android:onClick="onVisibilityListWalkButtonClick" />

            <RadioButton
                android:id="@+id/defaultDisplayRadioButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:checked="true"
                android:onClick="onVisibilityListDefaultButtonClick" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/saveRouteLayout"
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="100dp"
            android:background="#DCEDC8"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/trackOrRouteLayoutCloseButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:alpha="1"
                android:onClick="onSaveRouteCloseButtonClick"
                android:src="@drawable/close" />

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/trackOrRouteLayoutText"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/deleteTrackOrRouteButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#FFD54F"
                android:onClick="onSaveRouteDeleteButtonClick"
                android:text="@string/deleteTrackOrRouteButtonText"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:strokeColor="#FF6F00"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/doTrackOrRouteButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#FFD54F"
                android:text="@string/doTrackOrRouteButtonText"
                android:textAllCaps="false"
                android:textSize="11sp"
                app:strokeColor="#FF6F00"
                app:strokeWidth="3dp" />
        </FrameLayout>

    </FrameLayout>

</FrameLayout>